<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/webView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textClient"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLeft"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/ic_button_left" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/ic_button_right" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUp"
        android:background="@mipmap/ic_button_up"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonHeadDown"
        android:layout_toStartOf="@+id/buttonHeadDown" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDown"
        android:background="@mipmap/ic_button_down"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonHeadDown"
        android:layout_toEndOf="@+id/buttonHeadDown" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHeadUp"
        android:background="@mipmap/ic_head_up"
        android:layout_below="@+id/textClient"
        android:layout_alignLeft="@+id/buttonHeadDown"
        android:layout_alignStart="@+id/buttonHeadDown" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHeadDown"
        android:background="@mipmap/ic_head_down"
        android:layout_above="@+id/buttonUp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHeadRight"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/ic_head_right" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHeadLeft"
        android:layout_alignBottom="@+id/buttonHeadRight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/ic_head_left" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButtonCamera"
        android:layout_alignTop="@+id/buttonHeadDown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textOff="Camera OFF"
        android:textOn="Camera ON" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Led IOIO"
        android:id="@+id/buttonLed"
        android:layout_above="@+id/textServer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textServer"
        android:layout_below="@+id/toggleButtonCamera"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
